-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-

#0 -> Connect to Internet
    iwctl
    device list
    station wlan0 connect Zenos

#1 -> Check you are connected with a ping test
    ping -c 3 archlinux.org

#2 -> Synchronize with network time
    timedatectl set-ntp true

#3 -> Update your mirrorlist
    reflector --verbose --latest 200 --sort rate --save /etc/pacman.d/mirrorlist

#4 -> Install terminus-font
    pacman -Sy terminus-font

#5 -> setfont
    setfont ter-v24b

#6 -> Check available disks
    lsblk

#7 -> Partition disk create 3 partitions [nvme0n1p1 as boot(1) {1G} ,nvme0n1p2 as root(20) {900G},nvme0n1p3 as swap(19) {(rest)G}]
    fdisk /dev/nvme0n1
    # g - create a new gpt id
    # n - new partition
    # +dGiB - d belongs to a positive number
    # t - set type
    # w - write all the changes

#8 -> Format Boot partition
    mkfs.fat -F 32 /dev/nvme0n1p1

#9 -> Format Root partition
    mkfs.ext4 /dev/nvme0n1p2

#10 -> Format swap partition
    mkswap /dev/nvme0n1p3

#11 -> Activate swap
    swapon /dev/nvme0n1p3

#12 -> Mount root partition
    mount /dev/nvme0n1p2 /mnt

#13 -> Make directory for boot partition
    mkdir /mnt/boot

#14 -> Mount boot partition
    mount /dev/nvme0n1p1 /mnt/boot

#15 -> Pacstrap
    pacstrap /mnt base linux-lts linux-firmware linux-lts-headers base-devel efibootmgr mtools dosfstools vim reflector dnsmasq

#16 -> Copy systemd network configuration files
    cp /etc/systemd/network/* /mnt/etc/systemd/network

#17 -> Change root to new system
    arch-chroot /mnt

#18 -> Installing processor microcode
    pacman -S intel-ucode

#19 -> Symlinking localtime
    ln -sf /usr/share/zoneinfo/Asia/Kolkata /etc/localtime

#20 -> Synchronize with network time
    timedatectl set-ntp true

#21 -> Synchronize with hardware clock
    hwclock --systohc

#22 -> Adjust system clock from real time clock
    timedatectl set-local-rtc 1 --adjust-system-clock

#23 -> Setup locale
    vim /etc/locale.gen
    # Uncomment your locale

#24 -> Generate locale
    locale-gen

#25 -> Create locale.conf
    vim /etc/locale.conf
    # Add the below line with your locale info
    LANG=en_US.UTF-8

#26 -> Set your hostname
    vim /etc/hostname
    # Add something like below line
    cyberinfy

#27 -> Set your hosts
    vim /etc/hosts
    # Add the below lines by making required changes
    127.0.0.1   localhost
    ::1         localhost
    127.0.1.1   cyberinfy.localdomain   cyberinfy

#28 -> Set root password
    passwd

#29 -> Install systemd-boot
    bootctl install

#30 -> Create a boot entry
    vim /boot/loader/entries/arch.conf
    # Add the below lines by making required changes
    title Arch
    linux /vmlinuz-linux-lts
    initrd /intel-ucode.img
    initrd /initramfs-linux-lts.img
    options rw root=/dev/nvme0n1p2 resume=/dev/nvme0n1p3 pci=noaer quiet loglevel=3 rd.udev.log-priority=3 splash

#31 -> Configure bootloader
    vim /boot/loader/loader.conf
    # Add the below lines by making required changes
    #timeout 3
    default arch.conf

#32 -> Configure mkinitcpio
    vim /etc/mkinitcpio.conf
    # Update "HOOKS=(base udev autodetect modconf block filesystems keyboard fsck)" to
    HOOKS=(base udev autodetect modconf block filesystems keyboard resume fsck)

#33 -> generate initramfs  
    mkinitcpio -p linux-lts

#34 -> Install Graphics
    pacman -S xf86-video-intel nvidia-lts nvidia-utils

#35 -> Install Display Server and it's applications
    pacman -S xorg

#36 -> Install Plasma
    pacman -S plasma-meta packagekit-qt5

#37 -> Install  kde-applications (optional)
    pacman -S kde-applications-meta
    
#38 -> User creation
    useradd -m -g wheel krishna
    passwd krishna

#39 -> EDITOR=vim visudo
    # uncomment below line
    %wheel ALL=(ALL) ALL

#40 -> Enable required services
    systemctl enable systemd-networkd
    systemctl enable systemd-resolved
    systemctl enable systemd-timesyncd
    systemctl enable NetworkManager
    systemctl enable bluetooth
    systemctl enable sddm

#41 -> Final Steps
    exit
    umount -a
    reboot
    login as krishna #user

-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-
